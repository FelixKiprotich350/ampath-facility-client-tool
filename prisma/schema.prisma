generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "mysql"
}

model Facility {
  id        Int       @id @default(autoincrement())
  name      String
  location  String?
  data      Json?
  createdAt DateTime  @default(now()) @map("created_at")
  synced    Boolean   @default(false)
  syncedAt  DateTime? @map("synced_at")

  @@map("facilities")
}

model FacilityReportType {
  id                 String                     @id @default(uuid())
  name               String
  kenyaEmrReportUuid String                     @unique
  reportType         FacilityReportTypeCategory
  isReporting        Boolean                    @default(true)
  createdAt          DateTime                   @default(now())
  updatedAt          DateTime                   @updatedAt

  @@map("facility_report_types")
}

model Indicator {
  id          Int       @id @default(autoincrement())
  facilityId  String
  indicatorId String
  name        String
  value       String
  period      String
  data        Json?
  createdAt   DateTime  @default(now()) @map("created_at")
  synced      Boolean   @default(false)
  syncedAt    DateTime? @map("synced_at")

  @@map("indicators")
}

model LineList {
  id         Int       @id @default(autoincrement())
  facilityId String
  patientId  String?
  data       Json
  createdAt  DateTime  @default(now()) @map("created_at")
  synced     Boolean   @default(false)
  syncedAt   DateTime? @map("synced_at")

  @@map("line_lists")
}

model IndicatorType {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  query       String
  source      String // 'database' or 'api'
  apiUrl      String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("indicator_types")
}

model StagedIndicator {
  id               Int       @id @default(autoincrement())
  indicatorCode    String
  rawResult        Json
  startDate        DateTime
  endDate          DateTime
  createdAt        DateTime  @default(now()) @map("requested_at")
  syncedToAmepAt   DateTime? @map("synced_amep_at")
  syncedToAmpathAt DateTime? @map("synced_ampath_at")

  @@map("staged_indicators")
}

model ReportDownload {
  id                 Int       @id @default(autoincrement())
  kenyaEmrReportUuid String
  csvContent         Json
  requestUrl         String
  response           String
  reportPeriod       String
  requestedAt        DateTime  @default(now()) @map("requested_at")
  recordCount        Int?
  syncedToAmep       Boolean   @default(false)
  syncedToAmpath     Boolean   @default(false)
  syncedToAmepAt     DateTime? @map("synced_amep_at")
  syncedToAmpathAt   DateTime? @map("synced_ampath_at")

  @@map("report_downloads")
}

model ReportQueue {
  id                 Int       @id @default(autoincrement())
  kenyaEmrReportUuid String
  reportPeriod       String
  status             String    @default("PENDING")
  error              String?
  createdAt          DateTime  @default(now()) @map("created_at")
  processedAt        DateTime? @map("processed_at")

  @@map("report_queue")
}

enum FacilityReportTypeCategory {
  indicator
  linelist
}
