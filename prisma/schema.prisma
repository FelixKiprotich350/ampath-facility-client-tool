generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "mysql"
}

model Facility {
  id        Int      @id @default(autoincrement())
  name      String
  location  String?
  data      Json?
  createdAt DateTime @default(now()) @map("created_at")
  synced    Boolean  @default(false)
  syncedAt  DateTime? @map("synced_at")

  @@map("facilities")
}
