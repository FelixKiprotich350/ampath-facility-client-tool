generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "mysql"
}

model Facility {
  id        Int       @id @default(autoincrement())
  name      String
  location  String?
  data      Json?
  createdAt DateTime  @default(now()) @map("created_at")
  synced    Boolean   @default(false)
  syncedAt  DateTime? @map("synced_at")

  @@map("facilities")
}

model FacilityReportType {
  id                 String                     @id @default(uuid())
  name               String
  kenyaEmrReportUuid String                     @unique
  reportType         FacilityReportTypeCategory
  isReporting        Boolean                    @default(true)
  createdAt          DateTime                   @default(now())
  updatedAt          DateTime                   @updatedAt

  @@map("facility_report_types")
}

model Indicator {
  id          Int       @id @default(autoincrement())
  facilityId  String
  indicatorId String
  name        String
  value       String
  period      String
  data        Json?
  createdAt   DateTime  @default(now()) @map("created_at")
  synced      Boolean   @default(false)
  syncedAt    DateTime? @map("synced_at")

  @@map("indicators")
}

model LineList {
  id         Int       @id @default(autoincrement())
  facilityId String
  patientId  String?
  data       Json
  createdAt  DateTime  @default(now()) @map("created_at")
  synced     Boolean   @default(false)
  syncedAt   DateTime? @map("synced_at")

  @@map("line_lists")
}

model IndicatorType {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  query       String
  source      String // 'database' or 'api'
  apiUrl      String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("indicator_types")
}

model ReportDownload {
  id           Int       @id @default(autoincrement())
  reportUuid   String
  csvContent   Json
  requestUrl   String
  response     String
  reportPeriod String
  requestedAt  DateTime  @default(now()) @map("requested_at")
  recordCount  Int?
  synced       Boolean   @default(false)
  syncedAt     DateTime? @map("synced_at")

  @@map("report_downloads")
}

model AmepElementstMapping {
  id                    Int      @id @default(autoincrement())
  kenyaEmrReportUuid    String
  reportVariableName    String
  dataElementId         String
  categoryOptionComboId String
  attributeOptionComboId  String?
  description           String?
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@unique([kenyaEmrReportUuid, reportVariableName, dataElementId, categoryOptionComboId])
  @@map("data_element_mappings")
}

enum FacilityReportTypeCategory {
  indicator
  linelist
}
