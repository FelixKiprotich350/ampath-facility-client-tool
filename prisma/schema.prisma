generator client {
  provider = "prisma-client"
  output   = "../lib/prisma"
}

datasource db {
  provider = "mysql"
}

model Facility {
  id        Int      @id @default(autoincrement())
  name      String
  location  String?
  data      Json?
  createdAt DateTime @default(now()) @map("created_at")
  synced    Boolean  @default(false)
  syncedAt  DateTime? @map("synced_at")

  @@map("facilities")
}

model Indicator {
  id          Int      @id @default(autoincrement())
  facilityId  String
  indicatorId String
  name        String
  value       String
  period      String
  data        Json?
  createdAt   DateTime @default(now()) @map("created_at")
  synced      Boolean  @default(false)
  syncedAt    DateTime? @map("synced_at")

  @@map("indicators")
}

model LineList {
  id         Int      @id @default(autoincrement())
  facilityId String
  patientId  String?
  data       Json
  createdAt  DateTime @default(now()) @map("created_at")
  synced     Boolean  @default(false)
  syncedAt   DateTime? @map("synced_at")

  @@map("line_lists")
}
